{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*.ts", "src/schema/shared/timestamps.js"],
  "exclude": ["dist"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@lib/*": ["lib/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"]
    }
  }
}
